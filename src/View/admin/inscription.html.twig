{% extends 'layout.html.twig' %}
{% block title %}Inscription - {{parent()}}{% endblock %}
{% block content %}

    <h2>Formulaire d'inscription</h2>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    <form action="{{ url('/admin/inscription') }}" method="POST">

        <label for="ad_mail_admin">Email :</label><br>
        <input type="email" id="ad_mail_admin" name="ad_mail_admin" required><br><br>

        <label for="mdp_admin">Mot de passe :</label><br>
        <input type="password" id="mdp_admin" name="mdp_admin" required><br><br>

        <button type="submit">S'inscrire</button>
    </form>

{% endblock %}