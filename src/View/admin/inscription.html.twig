{% extends 'layout.html.twig' %}
{% block title %}Inscription - {{parent()}}{% endblock %}
{% block content %}

<div class="form-container">
    <h2>Inscription</h2>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    <form action="{{ url('/admin/inscription') }}" method="POST">

        <label for="ad_mail_admin">Email :</label>
        <input type="email" id="ad_mail_admin" name="ad_mail_admin" required>

        <label for="mdp_admin">Mot de passe :</label>
        <input type="password" id="mdp_admin" name="mdp_admin" required>

        <button type="submit">S'inscrire</button>
    </form>
</div>
{% endblock %}