{% extends 'layout.html.twig' %}
{% block title %}Inscription - {{parent()}}{% endblock %}
{% block content %}

<div class="form-container">
    <h2>Inscription</h2>

    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}

    <form action="{{ url('/createur/inscription') }}" method="POST">
        <label for="nom_createur">Nom :</label>
        <input type="text" id="nom_createur" name="nom_createur" placeholder="Nom" required>

        <label for="ad_mail_createur">Email :</label>
        <input type="email" id="ad_mail_createur" name="ad_mail_createur" placeholder="Adresse Mail" required>

        <label for="mdp_createur">Mot de passe :</label>
        <input type="password" id="mdp_createur" name="mdp_createur" placeholder="Mot de passe" required>

        <label for="genre">Genre :</label>
        <select id="genre" name="genre">
            <option value="Homme">Homme</option>
            <option value="Femme">Femme</option>
            <option value="Autre">Autre</option>
        </select>

        <label for="ddn">Date de naissance :</label>
        <input type="date" id="ddn" name="ddn" required>

        <button type="submit">S'inscrire</button>
    </form>
</div>
{% endblock %}